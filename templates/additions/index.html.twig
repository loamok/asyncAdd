{% extends 'base.html.twig' %}

{% block title %}Hello AdditionsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Async Additions</h1>
    <h2>Give the number for the addition :</h2>
    {{ form(form) }}
    
    <table class="table">
        <tr>
            <th scope="row" colspan="3">Résultats calculés</th>
        </tr>
        <tr>
            <th scope="col" >Nombre A</th>
            <th scope="col" >Nombre B</th>
            <th scope="col" >Résultat</th>
        </tr>
        {% for addition in last5Additions %}
        <tr>
            <td>{{ addition.a }}</td>
            <td>{{ addition.b }}</td>
            <td>{{ addition.res }}</td>
        </tr>
        {% else %}
        <tr>
            <th scope="row" colspan="3">Pas encore de calculs</th>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
